{% extends "::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Homepage - {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            Savo rezultatus galite rasti tarp <span><strong>{{ resultCount }}</strong></span> dalyvių rezultatų iš <span><strong>{{ eventCount }}</strong></span> renginių
        </div>
        <div class="col-sm-5">

            <div class="form-box">
                <div class="form-top">
                    <div class="form-top-left">
                        <h3>{{ 'form.titles.login'|trans }}</h3>
                        <p>{{ 'form.subtitles.login'|trans }}:</p>
                    </div>
                    <div class="form-top-right">
                        <i class="fa fa-key"></i>
                    </div>
                </div>
                <div class="form-bottom">
                    {{ render(controller('FOSUserBundle:Security:login')) }}
                </div>
                {% render url('hwi_oauth_connect') %}
            </div>

        </div>

        <div class="col-sm-1 middle-border"></div>
        <div class="col-sm-1"></div>

        <div class="col-sm-5">

            <div class="form-box">
                <div class="form-top">
                    <div class="form-top-left">
                        <h3>{{ 'form.titles.register'|trans }}</h3>
                        <p>{{ 'form.subtitles.register'|trans }}:</p>
                    </div>
                    <div class="form-top-right">
                        <i class="fa fa-pencil"></i>
                    </div>
                </div>
                <div class="form-bottom">
                    {{ render(controller('FOSUserBundle:Registration:register')) }}
                </div>
            </div>

        </div>
    </div>
{% endblock %}