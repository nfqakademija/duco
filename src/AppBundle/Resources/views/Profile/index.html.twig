{% extends '::base.html.twig' %}

{% block body %}

    <h2 class='text-white'>Pridėti rezultatai</h2>
    <div class="row">
        <div class="well well-large bg-white">
            {% if addedResults|length > 0 %}
                <table class='table table-striped table-hover' align='center'>
                    <thead>
                    <tr>
                        <th><b>Vieta</b></th>
                        <th><b>Oficialus laikas</b></th>
                        <th><b>Realus laikas</b></th>
                        <th><b>Atstumas</b></th>
                        <th><b>Pavadinimas</b></th>
                        <th><b>Metai</b></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for event in addedResults %}
                        {% for result in event.results %}
                            <tr>
                                {% if result.overallPosition is null %}
                                    <td>Neskelbiama</td>
                                {% else  %}
                                    <td>{{ result.overallPosition }}</td>
                                {% endif %}

                                {% if result.finishTime is null %}
                                    <td>Neskelbiama</td>
                                {% else %}
                                    <td>{{ result.finishTime }}</td>
                                {% endif %}

                                {% if result.netTime is null %}
                                    <td>Neskelbiama</td>
                                {% else %}
                                    <td>{{ result.netTime }}</td>
                                {% endif %}


                                <td>{{ event.distance }}km</td>
                                <td>{{ event.eventName }}</td>
                                <td>{{ event.year }}</td>
                            </tr>
                        {% endfor %}
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                Nepridėta rezultatų prie paskyros.<br>
            {% endif %}
        </div>
    </div>

    <div class="row">
        <h2 class="text-white">Rezultatų pridėjimas</h2>
        <div class="well well-large bg-white">
            {% if notAddedResults|length > 0 %}
                <div class="panel-group" id="accordion">
                    <form role="form" action="{{ path('profile_update_results') }}" method="post">
                        {% for event in notAddedResults %}
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" data-parent="#accordion" href="#e_{{ event.id }}">
                                            {{ event.eventName }} {{ event.year }} {{ event.distance }}km
                                        </a>
                                    </h4>
                                </div>
                                <div id="e_{{ event.id }}" class="panel-collapse collapse in">
                                    <div class="panel-body">
                                        <table class='table table-striped table-hover'>
                                            <thead>
                                            <tr>
                                                <th></th>
                                                <th><b>Vieta</b></th>
                                                <th><b>Oficialus laikas</b></th>
                                                <th><b>Realus laikas</b></th>
                                                <th><b>Starto numeris</b></th>
                                                <th><b>Klubas</b></th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for result in event.results %}
                                                <tr>
                                                    <td><input type="checkbox" name="checked[]" title="{{ result.finishTime }}" value="{{ result.id }}"></td>
                                                    {% if result.overallPosition is null %}
                                                        <td>Neskelbiama</td>
                                                    {% else %}
                                                        <td>{{ result.overallPosition }}</td>
                                                    {% endif %}

                                                    {% if result.finishTime is null %}
                                                        <td>Neskelbiama</td>
                                                    {% else %}
                                                        <td>{{ result.finishTime }}</td>
                                                    {% endif %}

                                                    {% if result.netTime is null %}
                                                        <td>Neskelbiama</td>
                                                    {% else %}
                                                        <td>{{ result.netTime }}</td>
                                                    {% endif %}

                                                    {% if result.raceNumber is null %}
                                                        <td>Neskelbiama</td>
                                                    {% else %}
                                                        <td>#{{ result.raceNumber }}</td>
                                                    {% endif %}

                                                    {% if result.club is null %}
                                                        <td>Neskelbiama</td>
                                                    {% else %}
                                                        <td>{{ result.club }}</td>
                                                    {% endif %}
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                        <button class="btn" style="margin-top: 20px" type="submit">Išsaugoti</button>
                    </form>
                </div>
            {% else %}
                Rezultatų nerasta.
            {% endif %}
        </div>
    </div>


{% endblock %}
