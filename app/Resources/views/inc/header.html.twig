{% trans_default_domain 'AppBundle' %}

<nav class="navbar">
    <div class="container-fluid">
        <div class="col-xs-offset-3 col-xs-6 col-sm-3 col-sm-offset-0 col-lg-2">
            <a class="navbar-brand" href="{{ path('app.index') }}"></a>
        </div>
        <div class="centered-search-box col-xs-5 col-sm-5 col-lg-6">
            <form class="navbar-form" role="search" action="{{ path('search') }}" method="get">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="{{ 'header.search'|trans }}" name="q">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <div class="navbar-header col-xs-6 col-xs-offset-1 col-sm-4 col-lg-4">
            {% if app.user %}
                <a class="col-xs-8 col-sm-8 col-md-10 col-lg-10" href="{{ path('fos_user_profile_edit') }}">
                    {% if app.user.profilePicture %}
                        <img class="img-circle pull-right" width="50" height="50" src="{{ app.user.profilePicture }}"/>
                    {% else %}
                        <img class="img-circle pull-right" width="50" height="50" src="{{ asset('images/blank-photo.jpg') }}"/>
                    {% endif %}
                    <p class="visible-lg visible-md col-sm-4 col-md-7 col-lg-9">{{ app.user.firstName }} {{ app.user.lastName }}</p>
                </a>
                <ul class="nav navbar-nav navbar-right security-links col-xs-4 col-sm-4 col-md-2 col-lg-2 pull-right">
                    <li><a href="{{ path('fos_user_security_logout') }}"><span
                                    class="glyphicon glyphicon-log-out"></span>
                            <span class="logout-text visible-lg"></span></a></li>
                </ul>
            {% endif %}
        </div>
    </div>
</nav>