{% trans_default_domain 'AppBundle' %}

<nav class="navbar">
    <div class="container">
        {% if app.user %}
            <div class="navbar-header">
                <a href="{{ path('profile_show_results') }}">
                    {% if app.user.profilePicture %}
                        <img class="img-circle" src="{{ app.user.profilePicture }}"/>
                    {% else %}
                        <img class="img-circle" src="{{ asset('images/blank-photo.jpg') }}"/>
                    {% endif %}
                    <p>{{ app.user.firstName }} {{ app.user.lastName }}</p>
                </a>
                <ul class="nav navbar-nav navbar-right security-links">
                    <li><a href="{{ path('fos_user_security_logout') }}"><span class="glyphicon glyphicon-log-out"></span>
                            {{ 'header.logout'|trans }}</a></li>
                </ul>
            </div>
        {% endif %}
        <div class="centered-search-box">
            <form class="navbar-form" role="search" action="{{ path('search') }}" method="get">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="{{ 'header.search'|trans }}" name="q">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>
            </form>
        </div>
        <a class="navbar-brand" href="{{ path('app.index') }}"></a>
    </div>
</nav>