{% trans_default_domain 'FOSUserBundle' %}





{% block fos_user_content %}
    {% if error %}
        <div class="list-group-item list-group-item-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
        <div class="form-group">
            <input type="text" name="_username" placeholder="{{ 'form.email'|trans }}"
                   class="form-username form-control" id="form-username" value="{{ last_username }}"
                   required="required">
        </div>

        <div class="form-group">
            <input type="password" name="_password" placeholder="{{ 'form.password'|trans }}" class="form-password form-control" id="form-password"
                   required="required">
        </div>

        <button type="submit" id="_submit" name="_submit" class="btn">{{ 'security.login.submit'|trans }}</button>
    </form>
{% endblock fos_user_content %}
